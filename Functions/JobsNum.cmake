# \file  JobsNum.cmake
# \brief Get job number
#--------------------------------------------------------------------------------------------------


include(ProcessorCount)

#--------------------------------------------------------------------------------------------------
function(jobs_num VALUE)
	set(CPU_NUM 0)

	ProcessorCount(CPU_NUM)
	math(EXPR CPU_NUM "${CPU_NUM}*2")

	set(${VALUE} "${CPU_NUM}" PARENT_SCOPE)

	message(STATUS "jobs_num: ${CPU_NUM}")
endfunction()
